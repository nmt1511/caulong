<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/tvTrangThaiSan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="TRẠNG THÁI SÂN"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- EditText để chọn ngày -->
        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Chọn ngày đặt"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="10dp"
            />

        <!-- Icon lịch -->
        <ImageView
            android:id="@+id/ivCalendarIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:contentDescription="Chọn ngày"
            android:src="@drawable/calendar" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvChonSan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Chọn sân"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <!-- GridLayout hiển thị 3 hàng và 3 cột -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_gravity="center">

        <!-- Sân 1 -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/icon_san" />

            <TextView
                android:id="@+id/san_so1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="1"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/circle_background"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- Sân 2 -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_san"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/san_so2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="2"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/circle_background"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- Sân 3 -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="10dp">


        <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_san"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/san_so3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="3"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/circle_background"
                android:layout_gravity="center" />
        </FrameLayout>

