<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/tvTrangThaiSan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Trạng thái sân"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="end"> <!-- Căn chỉnh các phần tử về phía bên phải -->

        <!-- TextView hiển thị ngày -->
        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Chọn ngày đặt"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="10dp"
          />

        <!-- Icon lịch -->
        <ImageView
            android:id="@+id/ivCalendarIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:contentDescription="Chọn ngày"
            android:src="@drawable/calendar" /> <!-- Đảm bảo bạn có drawable icon này -->
    </LinearLayout>


    <TextView
        android:id="@+id/tvChonGio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Chọn giờ"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="4">

        <!-- Các nút giờ -->
        <Button
            android:id="@+id/btnTime9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="09:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>

        <Button
            android:id="@+id/btnTime10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="10:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/btnTime11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="11:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/btnTime13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="13:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/btnTime14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="14:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/btnTime15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="15:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/btnTime16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="16:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/btnTime17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="17:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/btnTime18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="18:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/btnTime19"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="19:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/btnTime20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="20:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/btnTime21"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:text="21:00"
            android:textColor="@color/white"
            android:background="@drawable/button_border"/>

    </GridLayout>

    <TextView
        android:id="@+id/tvChonSan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Chọn sân"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="5"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp">

            <!-- ImageView for the field image -->
            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_san"
                android:scaleType="centerInside" />

            <!-- TextView for the number inside the red circle -->
            <TextView
                android:id="@+id/san_so1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="1"
                android:textSize="15sp"
                android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/circle_background"
            android:layout_gravity="center" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp">

            <!-- ImageView for the field image -->
            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_san"
                android:scaleType="centerInside" />

            <!-- TextView for the number inside the red circle -->
