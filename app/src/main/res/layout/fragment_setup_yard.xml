        </FrameLayout>

        <!-- Sân 9 -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/img9"
                android:layout_width="match_parent"
