<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/off_white">

    <TextView
        android:id="@+id/text_view_about_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới Thiệu Ứng Dụng"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ứng dụng đặt sân cầu lông giúp bạn dễ dàng quản lý và đặt sân một cách thuận tiện."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/text_view_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tác giả: HTT"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/text_view_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phiên bản: 1.0.0"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/text_view_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liên hệ: htt@gmail.com"
        android:textSize="16sp"
        android:textColor="@color/black" />

</LinearLayout>
