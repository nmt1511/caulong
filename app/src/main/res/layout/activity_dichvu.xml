<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_50"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="Chọn Dịch Vụ Khác"
        android:textColor="@color/text_primary"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_drink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nước"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary_500"
        android:padding="12dp"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/btn_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đồ ăn"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/secondary_500"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btn_book_lum_cau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book người lụm cầu"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary_700"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginTop="12dp"/>

</LinearLayout>
